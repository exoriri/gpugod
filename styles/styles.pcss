            border: none;
            font-size: 40px;
            color: #fff;
            width: 100%;
            background: $primaryBg;
            margin-top: auto;
            position: fixed;
            bottom: 0;
        }

        &__list-text {
            color: rgba(255, 255, 255, 0.8);
            font-size: 36px;
            text-align: center;
            width: 100%;
            &:hover {
                color: #fff;
            }
    
            &--active {
                color: #fff;
            }
        }

        &__list-item {
            border-bottom: 1px solid rgba(68, 66, 66, 0.8);
            padding: 0 20px;
            margin-bottom: calc(100vw / 920 * 74);
            padding-bottom: calc(100vw / 920 * 74);
            text-align: center;
            &:last-item {
                border-bottom: none;
                padding-bottom: 0;
                margin-bottom: 0;
            }
        }
    }

    #nav-main {
        display: flex;
    }

    .ready-invest {
        background: #fff;
        padding: 50px 0;

        &__title {
            color: #000;
        }

        &__buttons {
            text-align: center;
        }
        
        &__link {
            margin-bottom: 20px;
        }
    }

    .image-logo-icon {
        background: url('../assets/icons/logo-mobile.svg')
    }
}

@media screen and (min-width: 1px) and (max-width: 510px) {
    .main-container {
        &__pricing {
            justify-content: center !important;
        }
    }

    .description--main {
        justify-content: center;
    }
}